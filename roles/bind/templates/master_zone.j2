$TTL    604800
{{ startup_name }}.       IN      SOA     {{ vm_names[1] }}.{{ startup_name }}. ksenija.{{ startup_name }}. (
                2       ; Serial
                604800  ; Refresh
                86400   ; Retry
                2419200 ; Expire
                604800 ) ; Negative Cache TTL
;
{{ startup_name }}.       IN      NS      {{ vm_names[1] }}

; A records
{% for host in vm_names %}
{{ host }}     IN      A       {{ hostvars[host]['ansible_default_ipv4']['address'] }}
{% endfor %}
backup         IN      A       {{ backup_server_ip }}

; CNAME record for influxdb
{{ influxdb }}       IN      CNAME   {{ groups['influxdb'][0] }}
{{ prometheus }}     IN      CNAME   {{ groups['prometheus'][0] }}
