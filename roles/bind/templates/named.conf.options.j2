acl corpnets { 
    localhost; 
    {% for network in dns_allowed_networks %}
    {{ network }}; 
    {% endfor %} 
};

options {
    directory "/var/cache/bind";

    forwarders {
        {% for forwarder in dns_forwarders %}
        {{ forwarder }};
        {% endfor %}
    };

};

statistics-channels {
    inet 127.0.0.1 port 8053;
};
