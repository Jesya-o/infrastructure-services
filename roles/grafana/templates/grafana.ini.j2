[dashboards]
default_home_dashboard_path = /etc/grafana/provisioning/dashboards/main.json

[server]
root_url = http://{{ hostvars[inventory_hostname].ansible_host }}:{{ hostvars[inventory_hostname].ansible_port | regex_search('^[0-9]{2}')  }}80/grafana
serve_from_sub_path = true

[security]
admin_user = {{ grafana_user }}
admin_password = {{ grafana_pwd }}
